public class Card {
  
	private String suits;
	private Integer cardNumber;//1-13

	//public Card(){//gives you ace of spades
		//this.value=1;
		//this.suit="s";
//	}
	
	public Card(String suits, Integer cardNumber){
		this.cardNumber=cardNumber;
		this.suits=suits;
	}

	public String getSuits() {
		return suits;
	}

	public void setSuits(String suits) {
		this.suits = suits;
	}

	public Integer getCardNumber() {
		return value;
	}

	public void setCardNumber(Integer cardNumber) {
		this.value = value;
	}
}
